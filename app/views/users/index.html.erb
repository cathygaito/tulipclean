<div id="homepage">
	<table>
		<% @user.each do |z| %>
			<tr>
				<th>Name</th>
				<th>Email</th>
				<th>Address</th>
			</tr>
			<tr>
				<td class="index"><%= link_to "#{z.first} #{z.last}", z %></td>
				<td class="index"><%= z.email %></td>
				<td class="index">
					<% if z.apt %>
						<%= z.street + ", " + z.apt + ", " + z.city + ", " + z.state + " " + z.zip %>
					<% else %>
						<%= z.street + ", " + z.city + ", " + z.state + " " + z.zip %>
					<% end %>
				</td>
			</tr>
		<% end %>
	</table>
</div>